<Window x:Class="Lab_15_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus Timer" Height="350" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TimeDisplay" Text="25:00" FontSize="72" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30">
                <Button x:Name="StartButton" Content="Старт" FontSize="20" 
                       Width="80" Margin="10" Click="StartButton_Click"/>
                <Button x:Name="ResetButton" Content="Сброс" FontSize="20" 
                       Width="80" Margin="10" Click="ResetButton_Click"/>
            </StackPanel>

            <ComboBox x:Name="DurationComboBox" FontSize="16" Width="100" 
                     HorizontalAlignment="Center" Margin="0,10"
                     SelectionChanged="DurationComboBox_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Window>
